results.mk: Makefile
	if ! [ -d primme ]; then git clone https://github.com/primme/primme --depth 1; fi
	if ! [ -f .primme.ok ]; then cd primme && $(MAKE) -j$$(nproc) lib \
		CFLAGS="-w <% return primme_cflags or '-fopenmp -O3 -march=native -mtune=native -fPIC -ffunction-sections -fdata-sections' %>" \
		LDFLAGS="-w <% return primme_ldflags or '-fopenmp -O3 -march=native -fPIC' %>"; fi
	touch .primme.ok
	truncate -s0 results.mk
